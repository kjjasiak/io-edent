<script type="text/javascript">
    function showLoggedInUser(userID) {
        $.ajax({
            url: "/uzytkownik/zalogowany/" + userID + "/dane",
            type: "GET",
            dataType: 'json'
        }).done(function (data) {
            console.log(data);
            if (data) {
                $("#logged-in-user").html("Zalogowano jako: " + data[0].Imie + " " + data[0].Nazwisko + " (" + data[0].Rola + ", ID: " + data[0].ID + ", Login: " + data[0].Login + ")");
            }
        }).fail(function(jqXHR, textStatus) {
            console.log("fail: "+textStatus);
        });
    }
</script>